<div id="about"  class="about" style="background-color: #efeadd">
      <div class="container-fluid">
         <div class="row d_flex" style="background-color: #6d797c">
            <div class="col-xl-7 col-lg-7 col-md-12 padding_lert">
               <div class="about_img">
                  <figure class="d-flex flex-row justify-content-center align-items-center">
                     <img class="rounded w-100 m-5" src="images/about_img.jpg" alt="lady watering crops"/>
                  <div class="titlepage d-flex flex-column align-items-center text-center">
                     <h2 style="color: #b66850">Searching for markets in your area</h2>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   <!-- end about -->

<div class="menu-container card p-3" style="background-color:#6d797c">
    <h2 class="text-center p-2">
      Upcoming Market Events
    </h2>
    <div id="googleMap" class="card m-3"></div>
  <div class="d-flex flex-row justify-content-evenly">
    {{#each events as |event|}}
    <div id="event_card" class="card text-center m-3 w-25" style="background-color:#b66850; color:#efeadd">
      <p>Event: {{event.event_name}}</p>
      <p>Host: {{event.user.name}}</p>
      <p>Location: {{event.location}}</p>
      <p>Date: {{event.date}}</p>
      <p>Start: {{formatTime event.time_start}} Ends: {{formatTime event.time_end}}</p>
    </div>
    {{/each}}  
</div>

